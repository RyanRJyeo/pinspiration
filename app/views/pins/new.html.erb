<div class="container">

	<h1 class="display-4 text-center">New Pin</h1>

	<%= form_with scope: :pin, url: pins_path, local: true do |form| %>
		<div class="form-group mt-5" style="width: 50%; margin: 0 auto">

		  <p>
		    <%= form.label :title %><br>
		    <%= form.text_field :title, {:class => "form-control", :required => true} %>
		  </p>

		  <p>
		    <%= form.label :image %><br>
		    <%= form.url_field :image, {:class => "form-control", :required => true} %>
		  </p>



			<%= link_to 'Back', pins_path, {:class => "btn btn-outline-secondary"} %>

		  <%= form.submit "Save Pin", class: "btn btn-primary" %>

		</div>
	<% end %>

</div>